{
  "name": "iot-simulator",
  "productName": "IoT Simulator",
  "version": "0.0.1",
  "main": "./dist/main.bundle.js",
  "description": "An IoT Simulator",
  "scripts": {
    "start": "electron dist/main.bundle.js"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "electron-json-storage": "^4.1.2",
    "immutable": "^3.8.2",
    "mqtt": "^2.18.8",
    "node-fetch": "^2.2.0",
    "node-uuid": "^1.4.8",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-form": "^3.5.6",
    "react-settings-pane": "^0.1.5",
    "source-map-loader": "^0.2.4",
    "styled-components": "^3.4.9",
    "ts-loader": "^4.5.0",
    "typescript": "^3.0.1",
    "webpack": "^4.20.2"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.6",
    "@types/immutable": "^3.8.7",
    "@types/mqtt": "^2.5.0",
    "@types/node-fetch": "^2.1.2",
    "@types/node-uuid": "0.0.28",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.8",
    "react-toggle-button": "^2.2.0",
    "electron": "^2.0.10",
    "shebang-loader": "0.0.1"
  },
  "build": {
    "appId": "com.iviva.iot-simulator",
    "files": [
      "dist/*.js",
      "node_modules/**/*",
      "package.json",
      "*.css",
      "*.html",
      "fonts/*",
      "images/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "./build/"
    },
    "extraFiles": [
      "credentials"
    ],
    "publish": null
  }
}
